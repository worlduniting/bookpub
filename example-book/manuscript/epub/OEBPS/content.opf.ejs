<?xml version="1.0" encoding="UTF-8"?>
<package xmlns="http://www.idpf.org/2007/opf" version="2.0" unique-identifier="BlueHeadPublishing">
  <metadata xmlns:opf="http://www.idpf.org/2007/opf" xmlns:dc="http://purl.org/dc/elements/1.1/">
    <dc:language>en</dc:language>
    <dc:title><%= @book.title %></dc:title>
    <dc:creator opf:role="aut" opf:file-as="<%= @book.creator %>"><%= @book.creator %></dc:creator>
    <dc:date><%= @book.date %></dc:date>
    <dc:publisher><%= @book.publisher %></dc:publisher>
    <dc:rights><%= @book.rights %></dc:rights>
    <dc:identifier id="BlueHeadPublishing" opf:scheme="ISBN"><%= @book.identifier %></dc:identifier>
    <dc:subject><%= @book.subject %></dc:subject>
    <meta name="cover" content="cover-image"/>
  </metadata>
  <manifest>
    <item id="css" href="assets/css/stylesheet.<%= @output %>.css" media-type="text/css"/>
    <item id="pt" href="assets/css/page-template.xpgt" media-type="application/vnd.adobe-page-template+xml"/>

    <item id="cover-image" href="assets/images/cover.jpg" media-type="image/jpeg"/>
    <!-- Kindlegen does not like a separate cover.html and will complain -->
    <% if @output != :mobi %><item media-type="application/xhtml+xml" href="cover.html" id="cover" /><% end %>

    <item id="toc" href="toc.html" media-type="application/xhtml+xml"/>
    <item id="ncx" href="toc.ncx" media-type="application/x-dtbncx+xml"/>
    
    <!-- Book Contents -->
    <item id="book" href="book.html" media-type="application/xhtml+xml" />
      
    <!-- Assets -->
    <item id="bh_logo_png" href="assets/images/bluehead_logo_bw.png" media-type="image/png"/>
    <item id="dave-image" href="assets/images/dave_headshot.jpg" media-type="image/jpeg"/>
    <item id="steam_png" href="assets/images/steam.png" media-type="image/png"/>
    <item id="oc_png" href="assets/images/oc_logo.png" media-type="image/png"/>

    <!-- SVGs & Fonts unusable by MOBI -->
    <% if @output != :mobi %>
        <item id="oc_svg" href="assets/svgs/oc_logo.svg" media-type="image/svg"/>
        <item id="bh_logo_svg" href="assets/svgs/bluehead_logo_bw.svg" media-type="image/svg"/>
        <item id="steam_svg" href="assets/svgs/steam.svg" media-type="image/svg"/>
    <% end %>

    <!-- Fonts -->
    <item id="epub.embedded.font.baskerville" href="assets/fonts/baskerville/Baskerville.ttc" media-type="font/opentype"/>

  </manifest>
  <spine toc="ncx">
    <% if @output != :mobi %><itemref idref="cover" linear="no"/><% end %>
    <itemref idref="toc" />
    <itemref idref="book" />
  </spine>
  <guide>
    <% if @output != :mobi %><reference type="cover" title="Cover" href="cover.html"/><% end %>
    <reference type="toc" title="Table of Contents" href="toc.html"/>
  </guide>
</package>
